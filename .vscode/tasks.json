{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch - WASM",
			"type": "shell",
			"command": "cargo",
			"args": [
				"make",
				"watch"
			],
			"options": {
				"cwd": "crates/rrr_wasm"
			},
			"problemMatcher": [
				"$rustc"
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"make",
				"build"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Serve - WASM",
			"type": "shell",
			"command": "cargo",
			"args": [
				"make",
				"serve"
			],
			"options": {
				"cwd": "crates/rrr_wasm"
			},
			"problemMatcher": [
				"$rustc"
			],
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
